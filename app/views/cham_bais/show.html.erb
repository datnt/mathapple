<div style="margin-top:65px;" class="row">
  <div class="row">
    <div class="span4">
      <img src="/images/flashcards-icon.png" alt="Flashcards Icon">
      <br>
      <a href="#" class="btn large success">Danh mục bài thi</a>
    </div>
    <div class="span8">
      <table class="table">
        <thead>
          <tr>
            <td>
              Câu Hỏi
            </td>
            <td>
              Câu trả lời
            </td>
            <td>
              Chấm
            </td>
          </tr>
        </thead>

        <% @tralois.each do |t| %>
          <tr>
            <td>
              <% c = LoaiCauHoi.find(t.loai_cau_hoi_id) %>
              <%= eval(c.content).where(:loai_cau_hoi_id => c.id).first.cau_hoi %>
            </td>

            <td>
              <%= t.noidung %>
            </td>
            <td>
              <%= render :partial => "/cham_bais/box/cham", :locals => {:traloi => t} %>
            </td>

          </tr>
        <% end %>

      </table>
      <a class="btn btn-success" href="<%= ketthuc_cham_bais_path(:id => @ketqua.bai_tap_id) %>">Kết thúc</a>
    </div>
  </div>
</div>
<script>
  function DanhGia(ketqua, id){
    $.ajax({
      url: "<%= danhgia_cham_bais_path %>",
      type : 'GET',
      data: {
        id: ketqua,
        id_tra_loi: id
      },
      success: function(data){
      },
      error: function(){
      }
    });

  }
</script>