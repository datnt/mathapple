<%= form_for(@cauhoi, :url => luu_honso_bai_taps_path , :html => {:multipart => false, :id => "form_cau_hoi" }, :method => :post) do |f| %>
  <input name="id" type="hidden" value="<%= @baitap.id %>" id="id_bai_tap"/>
  <input name="id_cau_hoi" type="hidden" value="<%= @cate.id %>" id="id_bai_tap"/>

  <%= f.label "Câu hỏi" %>
  <%= f.text_field :cau_hoi %>
  <%= f.label "Phần nguyên" %>
  <%= f.text_field :songuyen %>
  <%= f.label "Số thứ nhất" %>
  <%= f.text_field :phanso_a %>
  <%= f.label "Kết quả" %>
  <%= f.text_field :ketqua %>
  <div class="page-header"></div>
  <%= f.submit "Khởi tạo" %>
<% end %>